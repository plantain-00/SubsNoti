<% include head %>
<div class="container" style="margin-top: 60px;">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Login
            </div>
            <div class="panel-body">
                <form class="form-horizontal" id="vue-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">email:</label>

                        <div class="col-sm-4">
                            <input type="text" class="form-control" v-model="rawEmail">
                        </div>

                        <label class="col-sm-1 control-label">name:</label>

                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="name">
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-primary" disabled v-show="!canLogin">{{loginText}}
                            </button>
                            <button type="button" class="btn btn-primary" v-show="canLogin" v-on="click:login();">
                                Login
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include scripts %>
<!-- rev-hash -->
<script type="text/javascript" src="./scripts/login.min.js"></script>
<!-- end -->
<% include foot %>